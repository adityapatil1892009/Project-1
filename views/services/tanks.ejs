    <style>
        /* Page-Specific Styles */
        .tanks-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .section-header {
            text-align: center;
            margin-bottom: 50px;
        }
        .section-header h1 {
            color: var(--primary-blue);
            font-size: 2.5rem;
            margin-bottom: 15px;
            font-weight: 700;
        }
        .section-header p {
            color: #666;
            font-size: 1.1rem;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Tabs Navigation */
        .tabs-nav {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 40px;
            border-bottom: 2px solid #eee;
            padding-bottom: 20px;
        }
        .tab-btn {
            background: none;
            border: none;
            font-size: 1.2rem;
            font-weight: 600;
            color: #777;
            padding: 10px 25px;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }
        .tab-btn.active {
            color: var(--primary-blue);
        }
        .tab-btn.active::after {
            content: '';
            position: absolute;
            bottom: -22px;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--primary-blue);
            border-radius: 4px 4px 0 0;
        }
        .tab-content {
            display: none;
            animation: fadeIn 0.5s ease;
        }
        .tab-content.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* WTP List Layout */
        .wtp-item {
            display: flex;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
            transition: transform 0.3s;
            border: 1px solid #eee;
        }
        .wtp-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .wtp-img {
            width: 35%;
            min-height: 250px;
            object-fit: cover;
        }
        .wtp-details {
            padding: 30px;
            width: 65%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .wtp-name {
            font-size: 1.8rem;
            color: var(--dark-blue);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .wtp-badge {
            font-size: 0.8rem;
            background: var(--light-blue);
            color: var(--primary-blue);
            padding: 4px 10px;
            border-radius: 20px;
            font-weight: 600;
        }
        .wtp-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin: 20px 0;
        }
        .stat-item h4 {
            color: #888;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }
        .stat-item p {
            color: var(--dark-blue);
            font-size: 1.1rem;
            font-weight: 600;
        }

        /* Tank Accordion Layout */
        .zone-group {
            margin-bottom: 20px;
        }
        .zone-header {
            background: white;
            padding: 20px 30px;
            border-radius: 12px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.03);
            border: 1px solid #eee;
            transition: all 0.3s;
        }
        .zone-header:hover {
            background: var(--light-blue);
        }
        .zone-title {
            font-size: 1.3rem;
            color: var(--dark-blue);
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .zone-icon {
            width: 40px;
            height: 40px;
            background: var(--light-blue);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-blue);
        }
        .toggle-icon {
            color: #aaa;
            transition: transform 0.3s;
        }
        .zone-body {
            background: #fafafa;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s ease-out;
            border-radius: 0 0 12px 12px;
            padding: 0 30px;
        }
        .zone-body.open {
            padding: 20px 30px;
            border: 1px solid #eee;
            border-top: none;
        }

        /* Table Styling within Accordion */
        .tank-table {
            width: 100%;
            border-collapse: collapse;
        }
        .tank-table th {
            text-align: left;
            color: #888;
            padding: 10px 0;
            font-size: 0.9rem;
            border-bottom: 1px solid #ddd;
        }
        .tank-table td {
            padding: 15px 0;
            color: #444;
            border-bottom: 1px solid #eee;
        }
        .tank-table tr:last-child td {
            border-bottom: none;
        }
        .status-dot {
            height: 10px;
            width: 10px;
            background-color: #28a745;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
        }
        .status-maintenance {
            background-color: #ffc107;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .wtp-item {
                flex-direction: column;
            }
            .wtp-img {
                width: 100%;
                height: 200px;
                min-height: auto;
            }
            .wtp-details {
                width: 100%;
                padding: 20px;
            }
        }
    </style>

